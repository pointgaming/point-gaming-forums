@font-face {
	font-family: 'lucida_granderegular';
	src: url('<%= asset_path('lucida-grande-regular-webfont.eot') %>');
	src: url('<%= asset_path('lucida-grande-regular-webfont.eot?#iefix') %>') format('embedded-opentype'),
		url('<%= asset_path('lucida-grande-regular-webfont.woff') %>') format('woff'),
		url('<%= asset_path('lucida-grande-regular-webfont.ttf') %>') format('truetype'),
		url('<%= asset_path('lucida-grande-regular-webfont.svg#lucida_granderegular') %>') format('svg');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'lucida_grandebold';
	src: url('<%= asset_path('lucida_grande_bold-webfont.eot') %>');
	src: url('<%= asset_path('lucida_grande_bold-webfont.eot?#iefix') %>') format('embedded-opentype'),
		url('<%= asset_path('lucida_grande_bold-webfont.woff') %>') format('woff'),
		url('<%= asset_path('lucida_grande_bold-webfont.ttf') %>') format('truetype'),
		url('<%= asset_path('lucida_grande_bold-webfont.svg#lucida_grandebold') %>') format('svg');
	font-weight: normal;
	font-style: normal;
}
body{
	margin:0;
	color:#414141;
	background:#f7f7f7;
	min-width:999px;
}
a{
	text-decoration:none;
	color:#414141;
}
a:hover{text-decoration:underline;}
a:active {background-color:transparent;}
input,
textarea,
select {
	font:13px 'lucida_granderegular', Arial, Helvetica, sans-serif;
	vertical-align:middle;
	color:#7a7a7a;
	margin:0;
}
input[type=submit]:hover{cursor:pointer;}
h1{
	color:#c21a00;
	margin:0 0 21px;
	letter-spacing:-2px;
	font:29px/31px 'lucida_grandebold', Arial, Helvetica, sans-serif;
}
.post{
	background:#fff;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: 0 5px 5px #f4f4f4;
	-moz-box-shadow: 0 5px 5px #f4f4f4;
	box-shadow: 0 5px 5px #f4f4f4;
	margin-bottom:29px;
}
.post img{
	display:block;
	margin-bottom:33px;
}
.post strong{font-weight:bold;}
.post .text-block{padding:0 30px 36px 37px;}
